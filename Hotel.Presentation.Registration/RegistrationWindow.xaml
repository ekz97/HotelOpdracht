<Window x:Class="Hotel.Presentation.Registration.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel.Presentation.Registration"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <DataGrid Name="MemberDataGrid" Grid.Column="0" Grid.Row="0" Margin="5"/>
        <DataGrid Name="ActivityDataGrid" Grid.Column="1" Grid.Row="0" Margin="5"/>
        <Button Name="AddMemberBtn" Content="Add member" Grid.Column="0" Grid.Row="1" Margin="5" Click="AddMemberBtn_Click"/>
        <Button Name="SubmitRegistrationBtn" Content="Sumbit" Grid.Column="1" Grid.Row="1" Margin="5" Click="SubmitRegistrationBtn_Click"/>
    </Grid>
</Window>
